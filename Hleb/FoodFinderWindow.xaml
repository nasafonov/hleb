<Window x:Class="Hleb.FoodFinderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hleb"
        mc:Ignorable="d"
        Title="FoodFinder" Height="500" Width="800">
    <Grid Background="#FFCDBF96">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>

        </Grid.RowDefinitions>
        <Button Name="ButtonCatalog" Margin="4" Height="40" Width="40" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ButtonBread2_Click"  >
            <Button.Background>
                <ImageBrush ImageSource="Images/хлеб3.png" />
            </Button.Background>
        </Button>
        <ComboBox Name="comboCategory" Grid.Column="1" Margin="5"/>
        <ComboBox Name="comboDish" Grid.Column="2" Margin="5"/>
        <Button Name="bt" Content="Receipt Finder" Grid.Column="3" FontSize="14" Margin="5" Click="Button_Click"/>
        <Image Source="Images/хлеб2.png" Opacity="0.7" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="350" Grid.ColumnSpan="3" Grid.Row="1" Grid.Column="1" Margin="166,0,60,151.2"/>
        <Button Grid.Column="4" Content="Ingredient Finder"  FontSize="14" Margin="5" ></Button>
        <StackPanel  Name="st" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="4" Background="#FFCDBF96" Width="732" Height="418" Visibility="Hidden" >
            <StackPanel>
                <TextBlock Text="Add ingredient" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="267,0,266,0"/>
            </StackPanel >
            <Button Content="" Width="250" Height="70" Margin="0,300,0,0" />
        </StackPanel>
    </Grid>
</Window>
