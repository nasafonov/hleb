<Window x:Class="Hleb.FoodFinderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hleb"
        mc:Ignorable="d"
        Title="FoodFinder" Height="800" Width="1000">
    <Grid Background="#FFCDBF96">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>

        </Grid.RowDefinitions>
        <Button Name="ButtonCatalog" Margin="4" Height="40" Width="40" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ButtonBread2_Click"  >
            <Button.Background>
                <ImageBrush ImageSource="Images/хлеб3.png" />
            </Button.Background>
        </Button>
        <TextBlock Grid.Column="2" Text="Это для теста, донт вори --> "/>
            
        <StackPanel Grid.Column="3">
            <CheckBox Name="check1" Content="Beef"/>
            <CheckBox Name="check2" Content="Egg"/>
        </StackPanel>
        <Button Name="bt" Content="Find recipes" Grid.Column="4" FontSize="14" Margin="5" Click="FindButton_Click"/>
        <Image Source="Images/хлеб2.png" Opacity="0.7" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="350" Grid.ColumnSpan="3" Grid.Row="1" Grid.Column="1" Margin="166,0,60,151.2"/>
        <StackPanel  Name="st" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="4" Background="#FFCDBF96" Width="732" Height="418" Visibility="Hidden" >
            <TextBlock Text="Add ingredient" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5"/>
            <TextBox Name="IngridientsBox" ></TextBox>
            <DataGrid Name="dataGridRecipe"  AutoGenerateColumns="False" IsReadOnly="True" Width="400" Height="400">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Image" Binding="{Binding ImageURI}" Width="1*"/>
                    <DataGridTextColumn Header="Name" Width="1*" Binding="{Binding Name }"/>
                    <DataGridTextColumn Header="Rating" Binding="{Binding Rating}" Width="1*"/>
                    <DataGridTextColumn Header="ID" Binding="{Binding IDOfRecepies}" Width="1*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
