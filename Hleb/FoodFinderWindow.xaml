<Window x:Class="Hleb.FoodFinderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hleb"
        mc:Ignorable="d"
        Title="FoodFinder" Height="800" Width="1000">
    <Grid Name="MainGrid" Background="#FFCDBF96">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>

        </Grid.RowDefinitions>
        <Button Name="ButtonCatalog" Margin="4" Height="40" Width="40" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ButtonBread2_Click"  >
            <Button.Background>
                <ImageBrush ImageSource="Images/хлеб3.png" />
            </Button.Background>
        </Button>
        <TextBlock Grid.Column="1" Text="Это для теста, донт вори --> "/>
            
        <StackPanel Grid.Column="2">
            <CheckBox Name="check1" Content="Beef"/>
            <CheckBox Name="check2" Content="Apple"/>
        </StackPanel>
        <Button Name="bt" Content="Find recipes" Grid.Column="3" FontSize="14" Margin="5" Click="FindButton_Click" Cursor="Hand"/>
        <Image Source="Images/хлеб2.png" Opacity="0.7" VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Grid.Row="1" Grid.ColumnSpan="4"/>
        <ScrollViewer Name="st" Grid.Row="1" Background="#FFCDBF96" Margin="30" VerticalAlignment="Center" Grid.ColumnSpan= "4" Visibility="Hidden">
            <StackPanel Name="Scroll">
                

            </StackPanel>
        </ScrollViewer>
        
    </Grid>
</Window>
